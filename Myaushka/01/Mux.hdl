/** 
 * Multiplexor. If sel==1 then out=b else out=a.
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    // Put your code here:
    
    And(a=b, b=sel, out=c0);
    Not(in=sel, out=notSel);
    And(a=a, b=notSel, out=c1);
    Or(a=c0, b=c1, out=out);
}